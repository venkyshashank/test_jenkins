pipeline {
    agent any
    stages {

        stage('Install Dependencies') {
            steps {
                sh 'echo "Installing dependencies"'
                sh 'npm install'
            }
        }

        stage('Lint') {
            steps {
                sh 'npm run lint'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'dist/**'
            }
        }
    }
}